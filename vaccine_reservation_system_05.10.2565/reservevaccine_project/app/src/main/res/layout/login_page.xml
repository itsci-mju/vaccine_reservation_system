<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_loading_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_margin="30dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/vaccination" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/prompt_medium"
                android:gravity="center"
                android:text="เข้าสู่ระบบ"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgid"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:src="@drawable/programmer"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/txt_user"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/prompt_medium"
                    android:hint="บัญชีผู้ใช้งาน"
                    android:inputType="textPersonName"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgpass"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:src="@drawable/password" />

                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/prompt_medium"
                    android:hint="รหัสผ่าน"
                    android:inputType="numberPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="273dp"
                    android:layout_height="47dp"
                    android:fontFamily="@font/prompt_medium"
                    android:onClick="ClickGORegister"
                    android:text="@string/underline_register"
                    android:textAlignment="viewEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#03A9F4"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/Clicklogin"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_border"
                    android:backgroundTint="#1E88E5"
                    android:fontFamily="@font/prompt_medium"
                    android:onClick="ClickGOHome"
                    android:text="เข้าสู่ระบบ"
                    android:textColor="@color/white"
                    android:textColorHighlight="#0C0C0C"
                    android:textColorHint="#000000"
                    android:textSize="18dp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</GridLayout>