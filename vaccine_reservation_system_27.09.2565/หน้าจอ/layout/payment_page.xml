                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/prompt_medium"
                                android:text="0000 บาท"
                                android:textAlignment="viewStart"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:paddingLeft="20dp"
                                android:text="ช่องทางชำระเงินผ่านธนาคาร"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                app:srcCompat="@drawable/bank_banner" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="อัพโหลดหลักฐาน"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="361dp"
                        android:layout_height="434dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="361dp"
                            android:layout_height="246dp"
                            android:orientation="horizontal"
                            android:textDirection="inherit">

                            <Button
                                android:id="@+id/btn_choosefile"
                                android:layout_width="188dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:layout_marginBottom="60dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/prompt_medium"
                                android:gravity="center"
                                android:onClick="openFileChooser"
                                android:text="เลือกรูปภาพ"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/image_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    tools:srcCompat="@drawable/upload1234" />

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    style="?android:attr/progressBarStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView43"
                                android:layout_width="82dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/prompt_medium"
                                android:text="วันที่ชำระเงิน"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:onClick="onclickDate"
                                app:srcCompat="@drawable/calendar_payment" />

                            <TextView
                                android:id="@+id/edit_date"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ems="10"
                                android:fontFamily="@font/prompt_medium"
                                android:inputType="date"
                                android:paddingLeft="20dp"
                                android:textAlignment="viewStart"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_saverecipt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_border"
                                android:fontFamily="@font/prompt_medium"
                                android:onClick="uploadFile"
                                android:text="ยืนยันการชำระเงิน"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:strokeColor="#DA2929" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
