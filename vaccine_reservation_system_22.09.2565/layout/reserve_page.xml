<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture1"
    tools:context=".reserve_page">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="379dp"
        android:layout_height="693dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="652dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shapecircle_orange"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_hospital"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="สั่งจองวัคซีน"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_reservedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="03/มี.ค./2565"
                android:textAlignment="center"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ข้อมูลการสั่งจองวัคซีน"
                android:textSize="24sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="center|start"
                    android:text="เลือกวัคซีนที่ต้องการ"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/select_VaccineList_item"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:textColor="#0CEA15"
                    android:textColorHint="#EC5221" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView190"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="center|start"
                    android:text="เลือกจำนวนวัคซีนที่ต้องการ"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spn_no"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:textColor="#0CEA15"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="คำเตือน !!!"
                android:textColor="#ECD50A"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:text="โปรดตรวจสอบความถูกต้องในการสั่งจองวัคซีนของท่านเพราะวัคซีนที่จองแล้วจะไม่สามารถแก้ไขการจองได้"
                android:textColor="#ECD50A"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:paddingTop="16dp"
                android:text="ข้าพเจ้าได้ตรวจสอบข้อมูลตามความเป็นจริงเพื่อยืนยันข้อมูล"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:buttonTint="@color/pink"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_border"
                    android:onClick="ClickaddReserve"
                    android:text="ลงทะเบียน"
                    android:textColor="#12ED1B" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_border"
                    android:onClick="goHome"
                    android:text="ยกเลิก"
                    android:textColor="#12ED1B" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>