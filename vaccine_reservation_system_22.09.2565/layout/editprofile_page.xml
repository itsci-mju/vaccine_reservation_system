<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture1"
    android:hapticFeedbackEnabled="false"
    android:onClick="goHome"
    android:textAlignment="center"
    tools:context=".editprofile_page">

    <LinearLayout
        android:id="@+id/Registerform"
        android:layout_width="366dp"
        android:layout_height="648dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="OnBtuAddTimeline"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="แก้ไขข้อมูลส่วนตัว"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="564dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="ชื่อ"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/bottom_btn2"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text="รณฤทธิ์"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="นามสกุล"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/bottom_btn2"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text="เสนตา"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="ที่อยู่"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text="เชียงใหม่"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextView13"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="เบอร์โทร"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text="0918836626"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="เพศ"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text="0918836626"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF">

                    <RadioButton
                        android:id="@+id/radio_Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFFFFF"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="false"
                        android:onClick="checkButton"
                        android:text="ชาย"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radio_Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFFFFF"
                        android:buttonTint="@color/pink"
                        android:onClick="checkButton"
                        android:text="หญิง"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="อีเมล"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text="Ronnarit@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="เลขบัตรประชาชน"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/input_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_idcard"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text="1559900374952"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/brithday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="วันเกิด"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_brithday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_border"
                    android:drawableStart="@drawable/ic_birthday"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:inputType="textPersonName|text"
                    android:onClick="onclickDate"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:text="สัญชาติ"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="ไทย"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/bt_register"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:background="@drawable/btn_border"

                android:onClick="ClickTOEdit"
                android:shadowColor="#CFBF32"
                android:text="ตกลง"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#12ED1B"
                android:textColorHighlight="#DC4F4F"
                android:textColorLink="#CA3F3F"
                android:typeface="normal" />

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bt_cancel"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:background="@drawable/btn_border"

                android:onClick="goHome"

                android:shadowColor="#CFBF32"
                android:text="ยกเลิก"
                android:textColor="#12ED1B"
                android:textColorHighlight="#DC4F4F"
                android:textColorLink="#CA3F3F"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>