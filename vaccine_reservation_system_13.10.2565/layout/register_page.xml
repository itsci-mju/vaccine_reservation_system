<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_apm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="63dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/prompt_medium"
                android:shadowColor="#150E0E"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:text="สมัครสมาชิกเข้าใช้งานระบบ"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="30sp" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="473dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="36dp"
            android:orientation="vertical"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">


            <ScrollView
                android:id="@+id/sv_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/register_form_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="ชื่อ"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/input_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/bottom_btn2"
                                    android:ems="10"
                                    android:fontFamily="@font/prompt_medium"
                                    android:inputType="textPersonName|text"
                                    android:padding="7dp"
                                    android:text="รณฤทธิ์"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textColorHint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lastnameTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="นามสกุล"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/input_lastname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/bottom_btn2"
                                    android:ems="10"
                                    android:fontFamily="@font/prompt_medium"
                                    android:inputType="textPersonName|text"
                                    android:padding="7dp"
                                    android:text="เสนตา"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textColorHint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/addressTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="ที่อยู่"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/input_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/bottom_btn2"
                                    android:ems="10"
                                    android:fontFamily="@font/prompt_medium"
                                    android:inputType="textPersonName|text"
                                    android:padding="7dp"
                                    android:text="เชียงใหม่"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textColorHint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/phoneTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="เบอร์โทร"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/input_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/bottom_btn2"
                                    android:ems="10"
                                    android:fontFamily="@font/prompt_medium"
                                    android:inputType="phone"
                                    android:padding="7dp"
                                    android:text="0918836626"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textColorHint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/genderTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="เพศ"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:id="@+id/radioSex"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_phone"
                                    android:drawablePadding="16dp"
                                    android:ems="10"
                                    android:inputType="textPersonName|text"
                                    android:orientation="horizontal"
                                    android:padding="7dp"
                                    android:text="0918836626"
                                    android:textAlignment="viewStart"
                                    android:textColor="#FFFFFF"
                                    android:textColorHint="#FFFFFF">

                                    <RadioButton
                                        android:id="@+id/radio_Male"
                                        android:layout_width="111dp"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#FFFFFF"
                                        android:buttonTint="@color/colorPrimary"
                                        android:checked="false"
                                        android:fontFamily="@font/prompt_medium"
                                        android:onClick="checkButton"
                                        android:text="ชาย"
                                        android:textColor="#000000"
                                        android:textColorHint="#FFFFFF"
                                        android:textSize="18sp" />

                                    <RadioButton
                                        android:id="@+id/radio_Female"
                                        android:layout_width="86dp"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#FFFFFF"
                                        android:buttonTint="@color/pink"
                                        android:fontFamily="@font/prompt_medium"
                                        android:onClick="checkButton"
                                        android:text="หญิง"
                                        android:textColor="#000000"
                                        android:textColorHint="#FFFFFF"
                                        android:textSize="18sp" />

                                </RadioGroup>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/emailTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="อีเมล"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/input_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_location"
                                    android:ems="10"
                                    android:fontFamily="@font/prompt_medium"
                                    android:inputType="textPersonName|text"
                                    android:padding="7dp"
                                    android:text="Ronnarit@gmail.com"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textColorHint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout_idcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/idcardTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="เลขบัตรประชาชน"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/input_idcard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_location"
                                    android:ems="10"
                                    android:fontFamily="@font/prompt_medium"
                                    android:inputType="textPersonName|text"
                                    android:onClick="goLogin"
                                    android:padding="7dp"
                                    android:text="1559900374952"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textColorHint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout_brithday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/brithdayTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="วัน/เดือน/ปี ที่เกิด"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/input_brithday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_location"
                                    android:ems="10"
                                    android:fontFamily="@font/prompt_medium"
                                    android:inputType="textPersonName|text"
                                    android:onClick="onclickDate"
                                    android:padding="7dp"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textColorHint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout_nationality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nationalityTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/prompt_medium"
                                android:text="สัญชาติ"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black_border"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/input_nationality"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_location"
                                    android:ems="10"
                                    android:fontFamily="@font/prompt_medium"
                                    android:inputType="textPersonName|text"
                                    android:padding="7dp"
                                    android:text="ไทย"
                                    android:textAlignment="viewStart"
                                    android:textColor="#000000"
                                    android:textColorHint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_btn"
            android:layout_width="344dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/bt_register"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"

                android:background="@drawable/btn_border"

                android:fontFamily="@font/prompt_medium"
                android:onClick="ClickTORegister"
                android:shadowColor="#CFBF32"
                android:text="ลงทะเบียน"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#DC4F4F"
                android:textColorLink="#CA3F3F"
                android:typeface="normal" />

            <Button
                android:id="@+id/bt_cancel"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:background="@drawable/btn_border"

                android:fontFamily="@font/prompt_medium"

                android:onClick="goHome"
                android:shadowColor="#CFBF32"
                android:text="ยกเลิก"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#DC4F4F"
                android:textColorLink="#CA3F3F"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>