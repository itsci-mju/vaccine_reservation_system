<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".Make_Appointment_Vaccine_page">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3F51B5"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/prompt_medium"
                    android:shadowColor="#303E30"
                    android:shadowDx="3"
                    android:shadowDy="4"
                    android:shadowRadius="1"
                    android:text="ปฎิฑินนัดหมายฉีดวัคซีน"
                    android:textAlignment="center"
                    android:textColor="#FEFFFF"
                    android:textSize="30sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#242F9B"
                    android:fontFamily="@font/prompt_medium"
                    android:paddingTop="5dp"
                    android:shadowColor="#0C0909"
                    android:shadowDx="2"
                    android:shadowDy="3"
                    android:shadowRadius="4"
                    android:text="เลือกวันและเวลาที่ต้องการใช้เวลา"
                    android:textAlignment="center"
                    android:textColor="#F3EFEC"
                    android:textSize="24sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

        <org.naishadhparmar.zcustomcalendar.CustomCalendar
            android:id="@+id/custom_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#646FD4"
            android:textAlignment="center"
            app:day_of_week_start_from="monday"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </org.naishadhparmar.zcustomcalendar.CustomCalendar>

        <TextView
            android:id="@+id/show_date_on_click"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:background="#242F9B"
            android:fontFamily="@font/prompt_medium"
            android:paddingTop="10dp"
            android:shadowRadius="2"
            android:textAlignment="center"
            android:textColor="#EEF3EE"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#646FD4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView77"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="120dp"
                android:gravity="center"
                android:text="เวลา"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView78"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="คงเหลือ"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:background="#DBDFFD">

            <TableLayout
                android:id="@+id/Main_Show_Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </ScrollView>

        <Button
            android:id="@+id/btn_saveappointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#242F9B"
            android:text="ยืนยันเลือกวัน"
            android:textColor="#F4F6F4"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>