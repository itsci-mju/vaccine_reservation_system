<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".notify_make_appointment_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_notify"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:fontFamily="@font/prompt_medium"
            android:gravity="center"
            android:paddingTop="130dp"
            android:shadowColor="#10E1CD"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="แจ้งนัดหมาย"
            android:textAlignment="center"
            android:textColor="#1632CF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="369dp"
            android:layout_height="363dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="match_parent"
                    android:layout_height="31dp" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="246dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/prompt_medium"
                    android:shadowColor="#290E0E"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="6"
                    android:text="สำหรับท่านมีคิวการจอง"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="233dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/prompt_medium"
                        android:text="**"
                        android:textAlignment="viewEnd"
                        android:textColor="#E31212"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="369dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:shadowColor="#290E0E"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="6"
                        android:text=" ลำดับที่ 264 ถึง 300 "
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textView60"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/prompt_medium"
                        android:text="**
                        "
                        android:textColor="#E31212"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/prompt_medium"
                    android:text="กรุณาทำการนัดหมายภายในวันที่ 12-16 ก.ย. 2565 เวลา 23.59 น."
                    android:textAlignment="center"
                    android:textColor="#040000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:text="   คำเตือน"
                    android:textColor="#FF0303"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:fontFamily="@font/prompt_medium"
                    android:paddingStart="10dp"
                    android:text=" - หากท่านไม่เลือกวันนัดฉีดวัคซีนระบบจะถือว่าท่านสละสิทธ์"
                    android:textAlignment="viewStart"
                    android:textColor="#FF0000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#242F9B"
                    android:fontFamily="@font/prompt_medium"
                    android:onClick="Open_make_appointment_vaccine_page"
                    android:shadowColor="#29E630"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="เลือกวันนัดหมาย"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>